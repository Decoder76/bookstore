<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", user_book_comments_path(comment),class:"btn btn-info  %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_user_book_comment_path,,class:"btn btn-primary"  %>
