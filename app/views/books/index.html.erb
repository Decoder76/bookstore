<p style="color: green"><%= notice %></p>

<h1>Books</h1>
<%= link_to "New book", new_user_book_path, class:"btn btn-primary"%>
<div class="row">
  <% @books.each do |book| %>
  <div class="card">
    
        <div class="card-body">
            <%= render book %>
            <h3><b><%= link_to book.title , user_book_path(current_user, book) %></b></h3>
            <h5 align="right">
            <span>
              <%= book.written_at%>
            </span>
          </h5>
        </div>
    <% end %>
  
</div>
</div>


